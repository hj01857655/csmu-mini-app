# CSMU教务系统 - 生产环境配置

# ===== 基础配置 =====
NODE_ENV=production
VUE_APP_ENV=production

# ===== API配置 =====
# 🚀 部署前必须更新为实际的生产环境API地址
VUE_APP_API_BASE_URL=https://api.csmu.edu.cn/api/v1
VUE_APP_API_TIMEOUT=15000
VUE_APP_API_RETRY_TIMES=2

# ===== 功能开关 =====
VUE_APP_ENABLE_MOCK=false
VUE_APP_DEBUG=false
VUE_APP_ENABLE_LOG_UPLOAD=true

# ===== 安全配置 =====
VUE_APP_FORCE_HTTPS=true
VUE_APP_TOKEN_EXPIRE_MINUTES=30
VUE_APP_TOKEN_REFRESH_BEFORE_MINUTES=5

# ===== 性能配置 =====
VUE_APP_ENABLE_COMPRESSION=true
VUE_APP_ENABLE_CACHE=true
VUE_APP_MAX_CONCURRENT_REQUESTS=3

# ===== 监控配置 =====
VUE_APP_ENABLE_ANALYTICS=true
VUE_APP_ENABLE_ERROR_TRACKING=true

# ===== 缓存配置 =====
VUE_APP_SCHEDULE_CACHE_MINUTES=30
VUE_APP_GRADES_CACHE_MINUTES=60
VUE_APP_USER_CACHE_MINUTES=120

# ===== 日志配置 =====
VUE_APP_CONSOLE_LOG=false
VUE_APP_NETWORK_LOG=false
VUE_APP_ERROR_LOG=true
