# CSMU教务系统 - 环境变量配置示例
# 复制此文件为 .env.local 并根据实际情况修改配置

# ===== API配置 =====
# API基础地址（必须配置）
VUE_APP_API_BASE_URL=https://api.csmu.edu.cn/api/v1

# API超时时间（毫秒）
VUE_APP_API_TIMEOUT=15000

# API重试次数
VUE_APP_API_RETRY_TIMES=2

# ===== 应用配置 =====
# 应用名称
VUE_APP_NAME=CSMU教务系统

# 应用版本
VUE_APP_VERSION=1.0.0

# 应用环境
NODE_ENV=production

# ===== 功能开关 =====
# 是否启用模拟数据（生产环境必须为false）
VUE_APP_ENABLE_MOCK=false

# 是否启用调试模式
VUE_APP_DEBUG=false

# 是否启用日志上传
VUE_APP_ENABLE_LOG_UPLOAD=true

# ===== 安全配置 =====
# 是否强制使用HTTPS
VUE_APP_FORCE_HTTPS=true

# JWT Token过期时间（分钟）
VUE_APP_TOKEN_EXPIRE_MINUTES=30

# 刷新Token提前时间（分钟）
VUE_APP_TOKEN_REFRESH_BEFORE_MINUTES=5

# ===== 小程序配置 =====
# 小程序AppID（微信小程序）
VUE_APP_WECHAT_APPID=your_wechat_appid

# 小程序版本
VUE_APP_MINIPROGRAM_VERSION=1.0.0

# ===== 第三方服务配置 =====
# 统计服务配置
VUE_APP_ANALYTICS_ID=your_analytics_id

# 错误监控服务
VUE_APP_SENTRY_DSN=your_sentry_dsn

# ===== 缓存配置 =====
# 课程表缓存时间（分钟）
VUE_APP_SCHEDULE_CACHE_MINUTES=30

# 成绩缓存时间（分钟）
VUE_APP_GRADES_CACHE_MINUTES=60

# 用户信息缓存时间（分钟）
VUE_APP_USER_CACHE_MINUTES=120

# ===== 网络配置 =====
# 请求并发限制
VUE_APP_MAX_CONCURRENT_REQUESTS=5

# 上传文件大小限制（MB）
VUE_APP_MAX_UPLOAD_SIZE=10

# 下载超时时间（毫秒）
VUE_APP_DOWNLOAD_TIMEOUT=30000

# ===== 开发配置 =====
# 开发服务器端口
VUE_APP_DEV_PORT=8080

# 开发服务器主机
VUE_APP_DEV_HOST=localhost

# 是否启用热重载
VUE_APP_HOT_RELOAD=true

# ===== 部署配置 =====
# CDN地址
VUE_APP_CDN_URL=https://cdn.csmu.edu.cn

# 静态资源版本
VUE_APP_ASSETS_VERSION=1.0.0

# 部署环境标识
VUE_APP_DEPLOY_ENV=production
